<Page x:Class="ManejoRIPS.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManejoRIPS"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">

    <Grid>
        <StackPanel Background="White">

            <TextBlock Margin="10" Foreground="Gray">Seleccione la Ruta de los RIPS</TextBlock>

            <Grid Margin="10">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnRuta" 
                    Grid.Column="0" 
                    HorizontalAlignment="Left" 
                    Height="30" Width="90" 
                    Background="#2196F3" 
                    Foreground="White" 
                    Click="btnRuta_Click" Grid.RowSpan="2">
                    Ruta
                </Button>

                <TextBox x:Name="txtFolder" 
                    IsEnabled="False" 
                    Grid.Column="1" 
                    Padding="5" Grid.RowSpan="2"/>
            </Grid>

            <Separator Margin="10 0" Background="#FFC3C0C0"/>
        </StackPanel>
    </Grid>
</Page>
